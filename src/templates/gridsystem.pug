        .col-6.col-sm-3=".col-6.col-sm-3 Resize your viewport or check it out on your phone for an example."  
        .col-6.col-sm-3=".col-6.col-sm-3"  
        .col-6.col-sm-3=".col-6.col-sm-3"  
        .col-6.col-sm-3=".col-6.col-sm-3"  
    h3="Offset, push, and pull resets"
    .row
        .col-sm-5.col-md-6=".col-sm-5 .col-md-6"
        .col-sm-5.offset-sm-2.col-md-6.offset-md-0=".col-sm-5.offset-sm-2.offset-md-0"